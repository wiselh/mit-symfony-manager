{% extends 'main.html.twig' %}
{% block title %}Utilisateurs{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/lib/sweetalert/sweetalert.css') }}" rel="stylesheet">
{% endblock %}

{% block page_title %}Utilisateur{% endblock %}
{% block root %}
    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
    <li class="breadcrumb-item active">Utilisateur</li>
{% endblock %}

{% block body %}

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-content">
                    <form class="form-add" method="post">
                        <div class="row">
                            <div class="form-group col-4">
                                <input type="text" class="form-control" id="firstname" name="firstname"
                                       placeholder="Prenom..">
                            </div>
                            <div class="form-group col-4">
                                <input type="text" class="form-control" id="lastname" name="lastname"
                                       placeholder="Nom..">
                            </div>
                            <div class="form-group col-4">
                                <input type="text" class="form-control" id="username" name="username"
                                       placeholder="Nom d'utilisateur..">
                            </div>
                            <div class="form-group col-4">
                                <input type="text" class="form-control" id="email" name="email"
                                       placeholder="votre adresse email..">
                            </div>
                            <div class="form-group col-4">
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="mot the pass..">
                            </div>
                            <div class="form-group col-2">
                                <label class="css-control css-control-primary css-checkbox" for="active">
                                    <input type="checkbox" class="css-control-input" id="active" name="active"
                                           value="oui">
                                    <span class="css-control-indicator"></span> Active
                                </label>
                            </div>
                            <div class="form-group col-2">
                                <div class="col-7 ml-auto">
                                    <button type="submit" class="btn btn-primary btn-sm">Ajouter</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-content">
                    <div class="card-title">
                        <h4>Utilisateurs </h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Inscription</th>
                                <th>Confirmer</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set  counter = 1 %}
                            {% for user in users %}
                                <tr>
                                    <th scope="row">{{ counter }}</th>
                                    <td>{{ user.firstname }}</td>
                                    <td>{{ user.lastname }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.createdAt|date('Y-m-d') }}</td>
                                    <td class="text-center">
                                        {% if ( user.active == 'oui' ) %}
                                            <span class="badge badge-success"> Oui </span>
                                        {% else %}
                                            <span class="badge badge-danger"> Non </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ( user.active != 'oui' ) %}
                                            <button data-id="{{ user.id }}"  class="btn btn-sm btn-success btn-active">Confirmer</button>
                                        {% endif %}
                                        <a href="{{ asset('show/') }}{{ user.id }}" class="btn btn-sm btn-info">Edit</a>
                                        <button data-id="{{ user.id }}" class="btn btn-sm btn-danger btn-delete" >Delete</button>
                                    </td>
                                </tr>
                                {% set counter = counter + 1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        var addUserUrl = "{{ path('add') }}";
        var deleteUserUrl = "{{ asset('delete/') }}";
        var activeUserUrl = "{{ asset('active/') }}";
    </script>
    {# Form validation #}
    <script src="{{ asset('assets/js/lib/form-validation/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('assets/js/lib/form-validation/forms_validation.js') }}"></script>

    {# SweetAlert #}
    <script src="{{ asset('assets/js/lib/sweetalert/sweetalert.min.js') }}"></script>
    <script src="{{ asset('assets/js/lib/sweetalert/sweetalert.init.js') }}"></script>

{% endblock %}
